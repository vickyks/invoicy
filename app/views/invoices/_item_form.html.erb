<fieldset data-target="items.item" data-action="click->items#removeItem" class="border border-gray-300 rounded p-4 mb-4">
  <legend class="text-lg font-semibold mb-2">Item <%= item_number %></legend>

  <div class="mb-4">
    <%= form.text_field :name, id: "item_name_#{item_number}", class: "appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.text_field :description, id: "item_description_#{item_number}", class: "appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.text_field :unit_price, id: "item_unit_price_#{item_number}", class: "appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.text_field :quantity, id: "item_quantity_#{item_number}", class: "appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

</fieldset>
